{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/runkids/skillshare/main/schemas/config.schema.json",
  "title": "Skillshare Global Configuration",
  "description": "Configuration file for skillshare — the universal AI skill manager. Location: ~/.config/skillshare/config.yaml",
  "type": "object",
  "required": ["source"],
  "additionalProperties": false,
  "properties": {
    "source": {
      "type": "string",
      "description": "Path to the skills source directory (single source of truth). Supports ~ for home directory.",
      "default": "~/.config/skillshare/skills",
      "examples": ["~/.config/skillshare/skills", "/home/user/my-skills"]
    },
    "mode": {
      "type": "string",
      "description": "Default sync mode for all targets.",
      "enum": ["merge", "symlink", "copy"],
      "default": "merge",
      "examples": ["merge"]
    },
    "targets": {
      "type": "object",
      "description": "AI CLI skill directories to sync to. Keys are target names (e.g. claude, cursor, codex).",
      "additionalProperties": {
        "$ref": "#/$defs/targetConfig"
      },
      "examples": [
        {
          "claude": { "path": "~/.claude/skills" },
          "cursor": { "path": "~/.cursor/skills" }
        }
      ]
    },
    "skills": {
      "type": "array",
      "description": "Remote skills installed via 'skillshare install'. Auto-managed — do not edit manually.",
      "items": {
        "$ref": "#/$defs/skillEntry"
      }
    },
    "ignore": {
      "type": "array",
      "description": "Glob patterns for files to skip during sync.",
      "items": {
        "type": "string"
      },
      "default": ["**/.DS_Store", "**/.git/**"],
      "examples": [["**/.DS_Store", "**/.git/**", "**/node_modules/**"]]
    },
    "audit": {
      "$ref": "#/$defs/auditConfig"
    },
    "hub": {
      "$ref": "#/$defs/hubConfig"
    }
  },
  "$defs": {
    "targetConfig": {
      "type": "object",
      "description": "Configuration for a single sync target.",
      "required": ["path"],
      "additionalProperties": false,
      "properties": {
        "path": {
          "type": "string",
          "description": "Absolute path to the target skills directory. Supports ~ for home directory.",
          "examples": ["~/.claude/skills", "~/.cursor/skills"]
        },
        "mode": {
          "type": "string",
          "description": "Sync mode override for this target. If omitted, inherits the top-level mode.",
          "enum": ["merge", "symlink", "copy"]
        },
        "include": {
          "type": "array",
          "description": "Glob patterns — only matching skills are synced (merge mode only).",
          "items": { "type": "string" },
          "examples": [["codex-*", "shared-*"]]
        },
        "exclude": {
          "type": "array",
          "description": "Glob patterns — matching skills are excluded from sync (merge mode only).",
          "items": { "type": "string" },
          "examples": [["*-experimental", "codex-*"]]
        }
      }
    },
    "skillEntry": {
      "type": "object",
      "description": "A remote skill entry tracked in config.",
      "required": ["name", "source"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "description": "Skill directory name.",
          "examples": ["pdf", "_team-skills"]
        },
        "source": {
          "type": "string",
          "description": "GitHub path or local path where the skill was installed from.",
          "examples": ["anthropics/skills/skills/pdf", "github.com/team/skills"]
        },
        "tracked": {
          "type": "boolean",
          "description": "True if installed with --track (preserves git history).",
          "default": false
        },
        "group": {
          "type": "string",
          "description": "Subdirectory group the skill belongs to (set by --into).",
          "examples": ["frontend", "backend"]
        }
      }
    },
    "auditConfig": {
      "type": "object",
      "description": "Security audit policy settings.",
      "additionalProperties": false,
      "properties": {
        "block_threshold": {
          "type": "string",
          "description": "Minimum severity level that blocks 'skillshare install'. Scanning always runs regardless of this setting.",
          "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW", "INFO"],
          "default": "CRITICAL"
        }
      }
    },
    "hubConfig": {
      "type": "object",
      "description": "Skill hub persistence settings.",
      "additionalProperties": false,
      "properties": {
        "default": {
          "type": "string",
          "description": "Default hub label to use for search/install."
        },
        "hubs": {
          "type": "array",
          "description": "List of saved hub sources.",
          "items": {
            "$ref": "#/$defs/hubEntry"
          }
        }
      }
    },
    "hubEntry": {
      "type": "object",
      "description": "A single saved hub source.",
      "required": ["label", "url"],
      "additionalProperties": false,
      "properties": {
        "label": {
          "type": "string",
          "description": "Display name for this hub.",
          "examples": ["official", "my-org"]
        },
        "url": {
          "type": "string",
          "description": "Hub URL.",
          "examples": ["https://skillshare.runkids.cc/api/hub"]
        },
        "builtin": {
          "type": "boolean",
          "description": "Whether this hub is built-in (auto-added on init).",
          "default": false
        }
      }
    }
  }
}
