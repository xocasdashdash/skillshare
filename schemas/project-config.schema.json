{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/runkids/skillshare/main/schemas/project-config.schema.json",
  "title": "Skillshare Project Configuration",
  "description": "Project-level configuration for skillshare. Location: .skillshare/config.yaml",
  "type": "object",
  "required": ["targets"],
  "additionalProperties": false,
  "properties": {
    "targets": {
      "type": "array",
      "description": "AI CLI skill directories to sync to. Supports string (known target name) or object (custom path/mode) forms.",
      "items": {
        "$ref": "#/$defs/projectTargetEntry"
      },
      "examples": [
        ["claude", "cursor"],
        [
          "claude",
          { "name": "custom-ide", "path": "./tools/ide/skills", "mode": "symlink" }
        ]
      ]
    },
    "skills": {
      "type": "array",
      "description": "Remote skills installed via 'skillshare install -p'. Auto-managed — do not edit manually.",
      "items": {
        "$ref": "#/$defs/skillEntry"
      }
    },
    "audit": {
      "$ref": "#/$defs/auditConfig"
    },
    "hub": {
      "$ref": "#/$defs/hubConfig"
    }
  },
  "$defs": {
    "projectTargetEntry": {
      "oneOf": [
        {
          "type": "string",
          "description": "Known target name (e.g. claude, cursor, codex). Uses default path and merge mode.",
          "examples": ["claude", "cursor", "codex"]
        },
        {
          "type": "object",
          "description": "Target with custom path, mode, or filters.",
          "required": ["name"],
          "additionalProperties": false,
          "properties": {
            "name": {
              "type": "string",
              "description": "Target name (known name or custom identifier).",
              "examples": ["claude", "custom-ide"]
            },
            "path": {
              "type": "string",
              "description": "Custom path to the target skills directory. Relative paths resolve from project root.",
              "examples": [".my-ide/skills/", "./tools/ide/skills"]
            },
            "mode": {
              "type": "string",
              "description": "Sync mode override for this target.",
              "enum": ["merge", "symlink", "copy"]
            },
            "include": {
              "type": "array",
              "description": "Glob patterns — only matching skills are synced (merge and copy modes).",
              "items": { "type": "string" }
            },
            "exclude": {
              "type": "array",
              "description": "Glob patterns — matching skills are excluded from sync (merge and copy modes).",
              "items": { "type": "string" }
            }
          }
        }
      ]
    },
    "skillEntry": {
      "type": "object",
      "description": "A remote skill entry tracked in config.",
      "required": ["name", "source"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "description": "Skill directory name.",
          "examples": ["pdf", "_team-skills"]
        },
        "source": {
          "type": "string",
          "description": "GitHub path or local path where the skill was installed from.",
          "examples": ["anthropics/skills/skills/pdf", "github.com/team/skills"]
        },
        "tracked": {
          "type": "boolean",
          "description": "True if installed with --track (preserves git history).",
          "default": false
        },
        "group": {
          "type": "string",
          "description": "Subdirectory group the skill belongs to (set by --into).",
          "examples": ["frontend", "backend"]
        }
      }
    },
    "auditConfig": {
      "type": "object",
      "description": "Security audit policy settings.",
      "additionalProperties": false,
      "properties": {
        "block_threshold": {
          "type": "string",
          "description": "Minimum severity level that blocks 'skillshare install -p'. Scanning always runs regardless of this setting.",
          "enum": ["CRITICAL", "HIGH", "MEDIUM", "LOW", "INFO"],
          "default": "CRITICAL"
        }
      }
    },
    "hubConfig": {
      "type": "object",
      "description": "Skill hub persistence settings.",
      "additionalProperties": false,
      "properties": {
        "default": {
          "type": "string",
          "description": "Default hub label to use for search/install."
        },
        "hubs": {
          "type": "array",
          "description": "List of saved hub sources.",
          "items": {
            "$ref": "#/$defs/hubEntry"
          }
        }
      }
    },
    "hubEntry": {
      "type": "object",
      "description": "A single saved hub source.",
      "required": ["label", "url"],
      "additionalProperties": false,
      "properties": {
        "label": {
          "type": "string",
          "description": "Display name for this hub.",
          "examples": ["official", "my-org"]
        },
        "url": {
          "type": "string",
          "description": "Hub URL.",
          "examples": ["https://skillshare.runkids.cc/api/hub"]
        },
        "builtin": {
          "type": "boolean",
          "description": "Whether this hub is built-in (auto-added on init).",
          "default": false
        }
      }
    }
  }
}
