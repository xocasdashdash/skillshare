{
  "name": "Skillshare Dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "skillshare-devcontainer",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24",
      "pnpmVersion": "10.28.0"
    }
  },
  "forwardPorts": [5173, 19420, 3000],
  "portsAttributes": {
    "5173": { "label": "Dashboard (ui)" },
    "19420": { "label": "API Backend" },
    "3000": { "label": "Docs (docs)" }
  },
  "remoteEnv": {
    "PATH": "/workspace/.devcontainer/bin:/workspace/bin:${containerEnv:PATH}",
    "SKILLSHARE_UI_HOST": "0.0.0.0"
  },
  "postCreateCommand": ".devcontainer/setup.sh",
  "postStartCommand": ".devcontainer/start-dev.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "bradlc.vscode-tailwindcss",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
